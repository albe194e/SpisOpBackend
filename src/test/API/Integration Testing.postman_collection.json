									"    \"lastName\": \"Jørgensen\",\r",
									"    \"email\": \"email@spisop.com\",\r",
									"    \"username\": \"username\",\r",
									"    \"profilePicture\": \"img.jpeg\",\r",
									"    \"isAdmin\": false,\r",
									"    \"addressId\": null\r",
									"}));"
								],
								"type": "text/javascript",
								"packages": {}
							}
						},
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 500\", function () {\r",
									"    pm.response.to.have.status(500);\r",
									"});\r",
									""
								],
								"type": "text/javascript",
								"packages": {}
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{{newUserFail}}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{base_url}}/user",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"user"
							]
						}
					},
					"response": []
				},
				{
					"name": "get user",
					"event": [
						{
							"listen": "prerequest",
							"script": {
								"exec": [
									"user = JSON.parse(pm.variables.get(\"newUser\"));\r",
									"pm.environment.set(\"userId\", user.id); "
								],
								"type": "text/javascript",
								"packages": {}
							}
						},
						{
							"listen": "test",
							"script": {
								"exec": [
									"//Positive test\r",
									"pm.test(\"200 response\", function () {\r",
									"    pm.response.to.have.status(200);\r",
									"});\r",
									"pm.test(\"Correct user\", function () {\r",
									"    var fetchedUser = pm.response.json();\r",
									"    var expectedUser = JSON.parse(pm.environment.get(\"newUser\"))\r",
									"    pm.expect(fetchedUser.id).to.eql(expectedUser.id);\r",
									"    pm.expect(fetchedUser.firstName).to.eql(expectedUser.firstName);\r",
									"    pm.expect(fetchedUser.lastName).to.eql(expectedUser.lastName);\r",
									"    pm.expect(fetchedUser.email).to.eql(expectedUser.email);\r",
									"    pm.expect(fetchedUser.username).to.eql(expectedUser.username);\r",
									"    pm.expect(fetchedUser.profilePicture).to.eql(expectedUser.profilePicture);\r",
									"    pm.expect(fetchedUser.admin).to.eql(expectedUser.admin);\r",
									"});\r",
									"\r",
									""
								],
								"type": "text/javascript",
								"packages": {}
							}
						}
					],
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/user/{{userId}}",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"user",
								"{{userId}}"
							]
						}
					},
					"response": []
				},

	"item": [
		{
			"name": "Users",
			"item": [
				{
					"name": "new user",
					"event": [
						{
							"listen": "prerequest",
							"script": {
								"exec": [
									"function generateString(length) {\r",
									"    const characters ='ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789';\r",
									"    let result = '';\r",
									"    const charactersLength = characters.length;\r",
									"    for ( let i = 0; i < length; i++ ) {\r",
									"        result += characters.charAt(Math.floor(Math.random() * charactersLength));\r",
									"    }\r",
									"\r",
									"    return result;\r",
									"}\r",
									"\r",
									"pm.environment.set(\"newUser\", JSON.stringify({\r",
									"    \"id\"       : generateString(15),\r",
									"    \"firstName\": \"Aisha\",\r",
									"    \"lastName\": \"Jørgensen\",\r",
									"    \"email\": \"email@spisop.com\",\r",
									"    \"username\": \"username\",\r",
									"    \"profilePicture\": \"img.jpeg\",\r",
									"    \"isAdmin\": false,\r",
									"    \"addressId\": null\r",
									"}));"
								],
								"type": "text/javascript",
								"packages": {}
							}
						},
						{
							"listen": "test",
							"script": {
								"exec": [
									"newUser = pm.environment.get(\"newUser\");\r",
									"\r",
									"pm.test(\"Status code is 201\", function () {\r",
									"    pm.response.to.have.status(201);\r",
									"});\r",
									"\r",
									"pm.test(\"new user created\", function () {\r",
									"    var savedUser = pm.response.json();\r",
									"    var expectedUser = JSON.parse(pm.environment.get(\"newUser\"))\r",
									"    pm.expect(savedUser.id).to.eql(expectedUser.id);\r",
									"    pm.expect(savedUser.firstName).to.eql(expectedUser.firstName);\r",
									"    pm.expect(savedUser.lastName).to.eql(expectedUser.lastName);\r",
									"    pm.expect(savedUser.email).to.eql(expectedUser.email);\r",
									"    pm.expect(savedUser.username).to.eql(expectedUser.username);\r",
									"    pm.expect(savedUser.profilePicture).to.eql(expectedUser.profilePicture);\r",
									"    pm.expect(savedUser.admin).to.eql(expectedUser.admin);\r",
									"});\r",
									"\r",
									""
								],
								"type": "text/javascript",
								"packages": {}
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{{newUser}}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{base_url}}/user",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"user"
							]
						}
					},
					"response": []
				},
				{
					"name": "new user fail",
					"event": [
						{
							"listen": "prerequest",
							"script": {
								"exec": [
									"\r",
